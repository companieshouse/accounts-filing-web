local_resource(
  name = 'dev:accounts-filing-web',
  cmd = 'rm -rf ./dist && npm install && npm run build',
  deps = ['src', 'views']
)

custom_build(
  ref = '416670754337.dkr.ecr.eu-west-2.amazonaws.com/accounts-filing-web',
  command = 'docker build --tag $EXPECTED_REF .',
  live_update = [
    sync(local_path = './src', remote_path = '/opt/src'),
    sync(local_path = './views', remote_path = '/opt/views'),
    run('npm install', trigger=['./package.json', './package-lock.json'])
  ],
  deps = [
    './dist',
    './src',
    './views'
  ]
)
