{
  "name": "accounts-filing-web",
  "version": "0.0.1",
  "description": "A web frontend for the account filing service, allowing users to submit accounts by uploading a zip file.",
  "main": "./src/server.ts",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint '{src,test}/**/*'",
    "lint:fix": "eslint '{src,test}/**/*' --fix",
    "start": "npm run build && source ./dist/config/.env && node dist/server.js",
    "start:watch": "nodemon",
    "prebuild": "rm -rf ./dist",
    "build:assets": "gulp build",
    "build:server": "tsc && cp -r ./src/views ./dist/ && cp -r ./src/config ./dist/",
    "build": "npm run build:assets && npm run build:server",
    "dev": "nodemon --signal SIGTERM --watch src --ignore 'src/**/*.unit.ts' --ext ts --exec 'node --require ts-node/register --inspect=0.0.0.0:9229 ./src/server.ts'",
    "sonarqube-base-branch": "sonar-scanner",
    "sonarqube-pull-request": "sonar-scanner -D sonar.pullrequest.base=main",
    "sonarqube": "branch=$(git rev-parse --symbolic-full-name --abbrev-ref HEAD); if [[ $branch == \"HEAD\" ]]; then echo $branch && npm run sonarqube-base-branch; else echo $branch && npm run sonarqube-pull-request; fi;",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/companieshouse/accounts-filing-web.git"
  },
  "keywords": [
    "filing",
    "accounts"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/companieshouse/accounts-filing-web/issues"
  },
  "homepage": "https://github.com/companieshouse/accounts-filing-web#readme",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.5",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/js-yaml": "^4.0.8",
    "@types/luxon": "^3.3.3",
    "@types/node": "^20.8.10",
    "@types/nunjucks": "^3.2.5",
    "@types/supertest": "^2.0.15",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-sass": "^5.1.0",
    "gulp-uglify": "^3.0.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "sass": "^1.69.5",
    "sonarqube-scanner": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@companieshouse/api-sdk-node": "^2.0.136",
    "@companieshouse/node-session-handler": "^4.1.9",
    "@companieshouse/structured-logging-node": "^1.0.8",
    "@companieshouse/web-security-node": "^2.0.3",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "govuk-frontend": "^4.7.0",
    "ioredis": "^5.3.2",
    "nunjucks": "^3.2.4",
    "private-api-sdk-node": "github:companieshouse/private-api-sdk-node#1.0.1",
    "uuid": "^9.0.1"
  },
  "overrides": {
    "chokidar": "^3.0.0",
    "vinyl-fs": "^4.0.0"
  }
}
