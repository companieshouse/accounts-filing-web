{% from "govuk/components/button/macro.njk" import govukButton %}

{% set html %}
<h3 class="govuk-notification-banner__heading" id="file-valid-title">Your package accounts zip file is valid</h3>

{% if isReviewNeeded %}
    <p>
        Your file '{{result.fileName}}' meets the iXBRL specification. 
        We'll need to check it meets business validation rules when you submit it. We'll email you to confirm if it's accepted or rejected.
    </p>
{% else %}
    <p>
        Your accounts file '{{result.fileName}}' meets the iXBRL specification and business validation rules.
    </p>
{% endif %}

{% endset %}

{{ govukNotificationBanner({
    titleText: 'Success',
    classes: "word-break",
    type: 'success',
    html: html
}) }}

{{ govukButton({
    text: "Continue",
    href: Urls.CHECK_YOUR_ANSWERS,
    attributes: {
        'data-event-id': 'package-accounts-success-continue-button'
    }
}) }}