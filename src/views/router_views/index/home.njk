{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% block main_content %}

    {% set packageZip %}
        <p class="govuk-body">
            {{ i18n.start-page-zip-pre-link }} <a href="https://www.gov.uk/government/publications/technical-interface-specifications-for-companies-house-software">{{i18n.start-page-zip-link}}</a> {{i18n.start-page-zip-post-link}}
        </p>
    {% endset %}

    <h1 class="govuk-heading-xl">
        {{ i18n.start-page-title }}
    </h1>

    <p class="govuk-body">
        {{ i18n.start-page-service-explaination }}
    </p>

    <p class="govuk-body">
        {{ i18n.start-page-only-file }}
    </p>

    <ul class="govuk-list govuk-list--bullet">
        <li>{{ i18n.start-page-cic-before-cost }}{{fees.cic}} {{ i18n.start-page-cic-after-cost }}</li>
        <li>{{ i18n.start-page-overseas-before-cost }}{{fees.overseas}} {{ i18n.start-page-overseas-after-cost }}</li>
        <li>{{ i18n.start-page-audit-exempt }}</li>
        <li>{{ i18n.start-page-dormant }}</li>
        <li>{{ i18n.start-page-limited }}</li>
        <li>{{ i18n.start-page-uksef }} </li>
        <li>{{ i18n.start-page-400 }}</li>
        <li>{{ i18n.start-page-401 }}</li>
        <li>{{ i18n.start-page-welsh }}</li>
    </ul>

    {{ govukInsetText({
        html: packageZip
    }) }}

    <p class="govuk-body">{{ i18n.start-page-youll-need }}</p>

    <ul class="govuk-list govuk-list--bullet">
        <li>{{ i18n.start-page-youll-need-sigin }}</li>
        <li>{{ i18n.start-page-youll-need-company-name }}</li>
        <li>{{ i18n.start-page-youll-need-code }}</li>
        <li>{{ i18n.start-page-youll-need-payment }}</li>
    </ul>

    <br>

    <p class="govuk-body">
        {{ i18n.start-page-timeout }}
    </p> 

    {{ govukButton({
        text: {{ i18n.start-now }},
        href: Urls.BEFORE_YOU_FILE_PACKAGE_ACCOUNTS,
        classes: "govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8",
        isStartButton: true
    }) }}

    <h2 class="govuk-heading-m">
        {{ i18n.start-page-prepare }}
    </h2>

    <p class="govuk-body">
        {{ i18n.start-page-frc-pre-link }} <a href="https://www.frc.org.uk/library/standards-codes-policy/accounting-and-reporting/frc-taxonomies/">{{ i18n.start-page-frc-link }}</a>.
    </p>

    <p class="govuk-body">
       {{ i18n.start-page-check-ixbrl-pre-link }} <a href="https://test-validator.companieshouse.gov.uk/xbrl_validate">{{ i18n.start-page-check-ixbrl-link }}</a>.
    </p>
{% endblock %}