{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% block main_content %}

    <h1 class="govuk-heading-l">
        {{ i18n.before_you_file_heading }}
    </h1>

    <p class="govuk-body">
        {{ i18n.before_you_file_you_must }} <a href="https://www.gov.uk/government/publications/technical-interface-specifications-for-companies-house-software">{{ i18n.before_you_file_read_techinical_spec }}</a> {{ i18n.before_you_file_to_find_out }}
    </p>

    <ul class="govuk-list govuk-list--bullet">
        <li>{{ i18n.before_you_file_how_to_structure }}</li>
        <li>{{ i18n.before_you_file_include_forms }}</li>
    </ul>

    {{ govukButton({
        text: i18n.continue,
        href: Urls.COMPANY_SEARCH,
        classes: "",
        isStartButton: false
    }) }}

{% endblock %}