{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "web-security-node/components/csrf-token-input/macro.njk" import csrfTokenInput %}

{% block main_content %}

    <h1 class="govuk-heading-l">
        {{ i18n.before_you_file_heading }}
    </h1>

    <p class="govuk-body">
        {{ i18n.before_you_file_you_must }} <a href="https://www.gov.uk/government/publications/technical-interface-specifications-for-companies-house-software" data-event-id="package-accounts-before-file-package-page-tech-spec-link">{{ i18n.before_you_file_read_techinical_spec }}</a> {{ i18n.before_you_file_to_find_out }}
    </p>

    <ul class="govuk-list govuk-list--bullet">
        <li>{{ i18n.before_you_file_how_to_structure }}</li>
        <li>{{ i18n.before_you_file_include_forms }}</li>
    </ul>

    <form method="POST">
        {{ govukButton({
            text: i18n.continue,
            classes: "",
            isStartButton: false,
            attributes: {
                'data-event-id': 'package-accounts-before-file-package-page-continue'
            },
            type: "submit"
        }) }}
    </form>

{% endblock %}